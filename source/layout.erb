<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>websrvr blog<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" />
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <style type="text/css">
      body{padding-top: 60px;}
      h1.page-header{margin-top: 0;}
      aside ul { list-style: none; }
    </style>
  </head>
  <body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">websrvr blog</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li><a href="/">home</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="http://docs.websrvr.in/">documenation</a></li>
            <li><a href="http://www.websrvr.in/" target="_blank">websrvr.in home</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class='container'>
      <% if current_page.respond_to? :title  %>
        <h1 class="page-header"><%= current_page.title %></h1>
    <% end %>
      <div class="row">
        <div class="col-md-8">
          <div id="main" role="main">
            <%= yield %>
          </div>
        </div>
        <div class="col-md-4">
          <aside>
            <h2>Recent Articles</h2>
            <ul>
              <% blog.articles[0...10].each do |article| %>
                <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
            <% end %>
            </ul>

            <h2>Tags</h2>
            <ul>
              <% blog.tags.each do |tag, articles| %>
                <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
            <% end %>
            </ul>

            <h2>By Year</h2>
            <ul>
              <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
                <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
            <% end %>
            </ul>
          </aside>
        </div>


      </div>


    </div>
  </body>
</html>
